{
  "canisters": {
    "Counter": {
      "main": "src/demo/Counter.mo",
      "type": "motoko"
    },
    "Metrics": {
      "main": "src/metrics/Metrics.mo",
      "type": "motoko"
    },
    "frontend": {
      "dependencies": ["Metrics"],
      "frontend": {
        "entrypoint": "src/frontend/src/index.html"
      },
      "source": ["src/frontend/assets", "dist/frontend/"],
      "type": "assets"
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "dfx": "0.7.2",
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    }
  },
  "version": 1
}
