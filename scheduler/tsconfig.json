{
  "compilerOptions": {
    "outDir": "build",
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "files": ["index.ts"],
}
